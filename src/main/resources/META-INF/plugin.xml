<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>club.gclmit.plugin.jetbrain.gitfox</id>
    <name>gitfox</name>
    <vendor email="gclmit@163.com" url="https://github.com/gclm">gclm</vendor>

    <!-- please see https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.vcs</depends>

    <actions>
        <action id="commitGuideAction" class="club.gclmit.plugin.jetbrain.gitfox.config.CommitGuideAction"
                text="Gitfox Commit Guide" icon="/icons/logo.svg">
            <add-to-group group-id="Vcs.MessageActionGroup" anchor="first"/>
        </action>
    </actions>

    <extensions defaultExtensionNs="com.intellij">
        <applicationConfigurable parentId="tools" instance="club.gclmit.plugin.jetbrain.gitfox.config.GitfoxConfig"
                                 id="club.gclmit.plugin.jetbrain.gitfox.config.GitfoxConfig"
                                 displayName="Gitfox"/>
        <applicationService serviceImplementation="club.gclmit.plugin.jetbrain.gitfox.config.GitfoxState"/>
    </extensions>

